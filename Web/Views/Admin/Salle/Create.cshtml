@model Domain.Entity.Salle

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBackOffice.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

